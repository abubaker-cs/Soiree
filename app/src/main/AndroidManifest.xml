<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uk.co.beevorwhite.soiree">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/soiree"
        android:label="@string/app_name"
        android:roundIcon="@drawable/soiree"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DinnerActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".CourseActivity"
            android:parentActivityName=".DinnerActivity">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".CourseActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".GuestActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".DinnerActivity">
        </activity>

        <provider
            android:name=".data.DinnerProvider"
            android:authorities="uk.co.beevorwhite.soiree"
            android:exported="false"/>

        <receiver android:name=".widget.widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info"/>
        </receiver>

        <service android:name=".widget.MyWidgetRemoteViewsFactory"
                  android:permission="android.permission.BIND_REMOTEVIEWS">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </service>
    </application>

</manifest>