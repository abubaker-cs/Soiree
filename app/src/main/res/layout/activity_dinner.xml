<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/included_toolbar"
        layout="@layout/toolbar"/>


    <android.support.v7.widget.CardView
        android:id="@+id/starter_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="@dimen/narrow_margin"
        android:layout_marginStart="@dimen/narrow_margin"
        android:layout_marginTop="@dimen/narrow_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:elevation="@dimen/card_elevation"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/included_toolbar"
        app:layout_constraintBottom_toTopOf="@id/main_card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/starter_image"
                android:contentDescription="@string/starter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/starter_skimView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_skim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/starter_label"
                style="@style/dinner_party_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/narrow_margin"
                android:layout_marginEnd="@dimen/narrow_margin"
                android:layout_marginStart="@dimen/narrow_margin"
                android:gravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="@dimen/narrow_margin"
        android:layout_marginStart="@dimen/narrow_margin"
        android:layout_marginTop="@dimen/narrow_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:elevation="@dimen/card_elevation"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/starter_card"
        app:layout_constraintBottom_toTopOf="@id/pudding_card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_image"
                android:contentDescription="@string/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_skimView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_skim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_label"
                style="@style/dinner_party_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/narrow_margin"
                android:layout_marginEnd="@dimen/narrow_margin"
                android:layout_marginStart="@dimen/narrow_margin"
                android:gravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/pudding_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/narrow_margin"
        android:layout_marginStart="@dimen/narrow_margin"
        android:layout_marginTop="@dimen/narrow_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:elevation="@dimen/card_elevation"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/main_card"
        app:layout_constraintBottom_toTopOf="@id/guest_card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pudding_image"
                android:contentDescription="@string/pudding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/pudding_skimView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_skim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/pudding_label"
                style="@style/dinner_party_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/narrow_margin"
                android:layout_marginEnd="@dimen/narrow_margin"
                android:layout_marginStart="@dimen/narrow_margin"
                android:gravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/guest_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/narrow_margin"
        android:layout_marginStart="@dimen/narrow_margin"
        android:layout_marginTop="@dimen/narrow_margin"
        android:layout_marginBottom="@dimen/narrow_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:elevation="@dimen/card_elevation"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/pudding_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/guest_image"
                android:contentDescription="@string/guest_card_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/guest_skimView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_skim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/guest_label"
                style="@style/dinner_party_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/narrow_margin"
                android:layout_marginEnd="@dimen/narrow_margin"
                android:layout_marginStart="@dimen/narrow_margin"
                android:gravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/guest_card_label"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>