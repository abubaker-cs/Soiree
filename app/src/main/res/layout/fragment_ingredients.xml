<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ingredient_card_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/narrow_margin"
        android:padding="@dimen/narrow_padding"
        app:layout_constraintBottom_toTopOf="@+id/recipe_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/card_elevation">

        <TextView
            android:id="@+id/ingredients_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/expanded_title_margin_end"
            android:layout_marginStart="@dimen/expanded_title_margin_start"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/empty_ingredients_view"
            />

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/recipe_button"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/wide_margin"
        android:layout_marginEnd="@dimen/wide_margin"
        android:layout_marginStart="@dimen/wide_margin"
        android:background="@color/colorAccent"
        android:elevation="@dimen/fab_elevation"
        android:gravity="center"
        android:text="@string/recipe_button"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>