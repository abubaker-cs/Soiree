<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/narrow_margin"
    android:layout_marginEnd="@dimen/narrow_margin"
    android:layout_marginStart="@dimen/narrow_margin"
    android:layout_marginTop="@dimen/narrow_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ingredient_item_tv"
        style="@style/ingredients_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/narrow_margin"
        android:layout_marginEnd="@dimen/wide_margin"
        android:layout_marginStart="@dimen/wide_margin"
        android:layout_marginBottom="@dimen/narrow_margin"
        />
</LinearLayout>