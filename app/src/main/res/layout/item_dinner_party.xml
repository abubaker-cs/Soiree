<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/narrow_margin"
    android:layout_marginEnd="@dimen/narrow_margin"
    android:layout_marginStart="@dimen/narrow_margin"
    android:layout_marginTop="@dimen/narrow_margin"
    android:clickable="true"
    android:transitionGroup="true"
    android:elevation="@dimen/card_elevation"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/dinner_party_label_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/snack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

        <ImageView
            android:id="@+id/skimView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/photo_skim"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

        <TextView
            android:id="@+id/dinner_party_label"
            style="@style/dinner_party_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/narrow_margin"
            android:layout_marginEnd="@dimen/narrow_margin"
            android:layout_marginBottom="@dimen/narrow_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>
       
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>